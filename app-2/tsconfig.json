{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "lib": ["dom", "es2021", "es5", "es6", "dom.iterable"],
        "declaration": true,
        "declarationMap": true,
        "jsx": "react-jsx",
        "strict": true,
        "pretty": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"]
}
